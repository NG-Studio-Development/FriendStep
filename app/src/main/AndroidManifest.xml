<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ngstudio.friendstep" >

    <permission
        android:name="com.ngstudio.friendstep.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ngstudio.friendstep.permission.MAPS_RECEIVE" />
    <uses-permission android:name="app.cloudstringers.permission.C2D_MESSAGE" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <permission
        android:name="com.ngstudio.friendstep.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />


    <uses-permission android:name="com.ngstudio.friendstep.permission.C2D_MESSAGE" />
    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- PERMISSIONS REQUIRED -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- REQUIRED for wifi wake functionality -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- PERMISSIONS CONTACTS -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.telephony"
        android:required="true"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-library android:name="com.google.android.maps" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:name="com.ngstudio.friendstep.WhereAreYouApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeAppGeneric" >


        <activity
            android:name="com.ngstudio.friendstep.ui.activities.LoginActivity"
            android:theme="@style/ThemeAppGeneric.NoActionBar"
            android:configChanges="orientation"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

       </activity>

        <activity android:name="com.ngstudio.friendstep.ui.activities.MapForPushActivity" >
        </activity>

        <activity android:name="com.ngstudio.friendstep.ui.activities.AddContactsActivity" >
        </activity>

        <activity
            android:name="com.ngstudio.friendstep.ui.activities.ProfileActivity"
            android:theme="@style/ThemeAppGeneric.ActionBarOverlay"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <activity android:name="com.ngstudio.friendstep.ui.activities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name="com.ngstudio.friendstep.debug.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>

        <service android:name="com.ngstudio.friendstep.components.GeoService" />

        <receiver
            android:name="com.ngstudio.friendstep.components.GoogleCloudMessagingClient$PushNotificationsReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.ngstudio.friendstep" />
            </intent-filter>
        </receiver>

        <service android:name="com.ngstudio.friendstep.components.GCMIntentService" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.ngstudio.friendstep.ui.activities.ChatActivity"
            android:label="@string/title_activity_chat" >

        </activity>

    </application>

</manifest>
