<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextViewFontExtension">
        <attr name="customFont" format="string"/>
    </declare-styleable>

    <declare-styleable name="AspectDrivenMeasurementExtension">
        <attr name="aspectRatio" format="string"/>
    </declare-styleable>

    <declare-styleable name="CapitalizerExtension">
        <attr name="capitalizeText" format="enum">
            <enum name="wholeText" value="0"/>
            <enum name="everySentence" value="1"/>
            <enum name="firstLetters" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="IconView">
        <attr name="square" format="boolean" />
        <attr name="scale_x" format="float" />
        <attr name="scale_y" format="float" />
    </declare-styleable>

</resources>